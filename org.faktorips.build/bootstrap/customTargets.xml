<project name="Build specific targets and properties" default="noDefault" >
	
<!-- ===================================================================== -->
<!-- Run a given ${target} on all elements being built -->
<!-- Add on <ant> task for each top level element being built. -->
<!-- ===================================================================== -->
<target name="allElements">
	<echo message="HALLO WELT" />
	
	
	<ant antfile="${genericTargets}" target="${target}" >
		<property name="type" value="feature" />
		<property name="id" value="org.faktorips.feature" />
	</ant>
	<echo message="HALLO WELT - nach build" />

	<ant antfile="${genericTargets}" target="${target}" >
		
		<property name="type" value="feature" />
		<property name="id" value="org.faktorips.feature-tests" />
	</ant>

</target>

<!-- ===================================================================== -->
<!-- Targets to assemble the built elements for particular configurations  -->
<!-- These generally call the generated assemble scripts (named in -->
<!-- ${assembleScriptName}) but may also add pre and post processing -->
<!-- Add one target for each root element and each configuration -->
<!-- ===================================================================== -->

<target name="assemble.org.faktorips.feature">
	<ant antfile="${assembleScriptName}" dir="${buildDirectory}">
		<property name="zipargs" value="" />
	</ant>
</target>
	
<target name="assemble.org.faktorips.feature-tests">
	<ant antfile="${assembleScriptName}" dir="${buildDirectory}">
		<property name="zipargs" value="" />
	</ant>
</target>

<!-- ===================================================================== -->
<!-- Check out map files from correct repository -->
<!-- Replace values for cvsRoot, package and mapVersionTag as desired. -->
<!-- ===================================================================== -->
<target name="getMapFiles">
        <property name="mapVersionTag" value="HEAD" />
        <antcall target="getMapFilesWithExtSshMethod"/>
</target>

<target name="getMapFilesWithExtSshMethod" unless="usePserver">
        <property name="cvsRoot" value=":ext:erzberger:faktorips.org:/usr/local/cvsroot" />
        <cvs
                cvsroot="${cvsRoot}"
                dest="${buildDirectory}/maps"
                command="export -r ${mapVersionTag} org.faktorips.build/map"
        />

</target>

