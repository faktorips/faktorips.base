<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <maven-javadoc-plugin-version>2.10.1</maven-javadoc-plugin-version>
        <maven-source-plugin-version>2.4</maven-source-plugin-version>
        <maven-compiler-plugin-version>3.2</maven-compiler-plugin-version>
        <maven-surefire-plugin>2.18.1</maven-surefire-plugin>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- JUnit, Findbugs and Checkstyle already run in tycho build -->
        <surefire.skip>true</surefire.skip>
        <findbugs.skip>true</findbugs.skip>
        <checkstyle.skip>true</checkstyle.skip>
        <java.version>1.6</java.version>
    </properties>

    <parent>
        <groupId>org.faktorips</groupId>
        <artifactId>faktorips-nexus</artifactId>
        <version>1.0.0</version>
        <relativePath></relativePath>
    </parent>

    <groupId>org.faktorips</groupId>
    <artifactId>faktorips-nexus-base</artifactId>
    <version>20.9.0-SNAPSHOT</version>

    <name>Faktor-IPS Library for Maven</name>
    <url>http://www.faktorzehn.org</url>

    <scm>
        <url>https://projekte.faktorzehn.de/gitweb/?p=faktorips/faktorips.base.git</url>
        <connection>scm:git:ssh://projekte.faktorzehn.de/projekte/faktorips/faktorips.base.git</connection>
    </scm>

    <packaging>pom</packaging>

    <modules>
        <module>../../org.faktorips.runtime/client</module>
        <module>../../org.faktorips.runtime/nexus</module>
        <module>../../org.faktorips.valuetypes/nexus</module>
        <module>../../org.faktorips.valuetypes.joda/nexus</module>
        <module>../../org.faktorips.runtime.groovy/nexus</module>
    </modules>

    <build>
        <pluginManagement>
            <!-- Older FindBugs versions can't be configured by current maven... -->
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>findbugs-maven-plugin</artifactId>
                    <version>3.0.5</version>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <activation>
                <jdk>11</jdk>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>jakarta.xml.bind</groupId>
                    <artifactId>jakarta.xml.bind-api</artifactId>
                    <version>2.3.3</version>
                </dependency>
                <dependency>
                    <groupId>com.sun.xml.bind</groupId>
                    <artifactId>jaxb-impl</artifactId>
                    <version>2.3.3</version>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
            <properties>
                <maven-javadoc-plugin-version>3.2.0</maven-javadoc-plugin-version>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-javadoc-plugin</artifactId>
                            <version>${maven-javadoc-plugin-version}</version>
                            <configuration>
                                <source>1.6</source>
                                <!-- at the moment we do not check missing javadoc like missing @param or @return -->
                                <doclint>accessibility,html,reference,syntax,-missing</doclint>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>
</project>
