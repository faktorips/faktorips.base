<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	
	<properties>
		<git.user>${user.name}</git.user>
	</properties>
	
	<groupId>org.faktorips</groupId>
	<artifactId>org.faktorips.aggregator</artifactId>
	<version>3.11.4-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.faktorips</groupId>
		<artifactId>org.faktorips.build</artifactId>
		<version>1.4.0</version>
	</parent>
	
	<!-- These are all modules that are included in the Faktor-IPS build -->

	<modules>
		<module>features</module>
		<module>plugins</module>
		<module>tests</module>
		<module>sites</module>
	</modules>

	<scm>
		<connection>scm:git:ssh://${git.user}@projekte.faktorzehn.de/projekte/faktorips/faktorips.base.git</connection>
	</scm>

	<build>
		<extensions>
			<!-- Include this build artifact to every child's classpath. This is used 
				for example by the checkstyle or findbugs configuration -->
			<extension>
				<groupId>org.faktorips</groupId>
				<artifactId>org.faktorips.build.config</artifactId>
				<version>1.0.2</version>
			</extension>
		</extensions>
	</build>
	
	<profiles>
			<profile>
			<id>tagScm</id>
			<activation>
				<!-- This profile should be active by default, also if there is a next 
					version set -->
				<activeByDefault>true</activeByDefault>
				<property>
					<name>nextVersion</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-scm-plugin</artifactId>
						<executions>
							<execution>
								<inherited>false</inherited>
								<id>tag</id>
								<phase>deploy</phase>
								<goals>
									<goal>tag</goal>
								</goals>
								<configuration>
									<tag>v${unqualifiedVersion}_${version.kind}</tag>
									<message>Release Version
										${unqualifiedVersion}.${buildQualifier}</message>
									<connectionType>connection</connectionType>
									<pushChanges>${scm.pushChanges}</pushChanges>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>setNextVersion</id>
			<activation>
				<property>
					<name>nextVersion</name>
				</property>
			</activation>
			<properties>
			<!-- Overwrite version for setting new version because there is a bug in currenty uses 0.18.0  -->
				<tycho-version>0.19.0</tycho-version>
				<tycho-extras-version>0.19.0</tycho-extras-version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-versions-plugin</artifactId>
						<configuration>
							<newVersion>${nextVersion}-SNAPSHOT</newVersion>
						</configuration>
						<executions>
							<execution>
								<id>setNextVersion</id>
								<goals>
									<goal>set-version</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
