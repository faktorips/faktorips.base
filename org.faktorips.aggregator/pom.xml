<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <git.user>${user.name}</git.user>
        <java.version>11</java.version>
        <target-platform>eclipse-2019-03</target-platform>
        <checkstyle.header.file>${project.basedir}/../org.faktorips.aggregator/checkstyle.java.header</checkstyle.header.file>
    </properties>

    <groupId>org.faktorips</groupId>
    <artifactId>org.faktorips.aggregator</artifactId>
    <version>22.6.3-SNAPSHOT</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>de.faktorzehn</groupId>
        <artifactId>faktorzehn-tycho-build</artifactId>
        <version>1.3.0</version>
    </parent>

    <!-- These are all modules that are included in the Faktor-IPS build -->

    <modules>
        <module>targets</module>
        <module>features</module>
        <module>plugins</module>
        <module>nexus8</module>
        <module>nexus11</module>
        <module>tests</module>
        <module>../faktorips-maven-archetype</module>
        <module>../faktorips-maven-plugin</module>
        <module>../faktorips-schemas</module>
        <module>sites</module>
        <module>../faktorips-coverage</module>
    </modules>

    <scm>
        <connection>scm:git:ssh://${git.user}@projekte.faktorzehn.de/projekte/faktorips/faktorips.base.git</connection>
    </scm>

    <build>

        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-versions-plugin</artifactId>
                <version>${tycho-version}</version>
                <configuration>
                    <artifacts>
                        ${project.artifactId},
                        faktorips-nexus-base-8,
                        faktorips-nexus-base-11,
                        faktorips-runtime-groovy
                    </artifacts>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>target-platform-configuration</artifactId>
                <configuration>
                    <target>
                        <artifact>
                            <groupId>org.faktorips</groupId>
                            <artifactId>${target-platform}</artifactId>
                            <version>1.0.0-SNAPSHOT</version>
                        </artifact>
                    </target>
                    <environments>
                        <environment>
                            <os>win32</os>
                            <ws>win32</ws>
                            <arch>x86_64</arch>
                        </environment>
                        <environment>
                            <os>linux</os>
                            <ws>gtk</ws>
                            <arch>x86_64</arch>
                        </environment>
                        <environment>
                            <os>macosx</os>
                            <ws>cocoa</ws>
                            <arch>x86_64</arch>
                        </environment>
                    </environments>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.moditect</groupId>
                    <artifactId>moditect-maven-plugin</artifactId>
                    <version>1.0.0.RC2</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <!-- TARGET PLATFORM MUST REFERENCE FEATURES ONLY -->
        <!-- and we have some problems with the babel dependencies because 
            not every host is included in target -->
    </build>

    <profiles>
        <profile>
            <id>tagScm</id>
            <activation>
                <!-- This profile should be active by default, also if there 
                    is a next version set -->
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>nextVersion</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <executions>
                            <execution>
                                <inherited>false</inherited>
                                <id>tag</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>tag</goal>
                                </goals>
                                <configuration>
                                    <tag>v${unqualifiedVersion}_${version.kind}</tag>
                                    <message>Release Version
                                        ${unqualifiedVersion}.${buildQualifier}</message>
                                    <connectionType>connection</connectionType>
                                    <pushChanges>${scm.pushChanges}</pushChanges>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
