<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.faktorips</groupId>
        <artifactId>base</artifactId>
        <version>26.1.0.a20250924-01</version>
    </parent>

    <artifactId>faktorips-runtime-parent</artifactId>
    <packaging>pom</packaging>

    <name>Faktor-IPS Runtime Parent</name>
    <description>Defines versions for and configures Maven plugins used to build the Faktor-IPS runtime libraries</description>

    <properties>
        <commons-beanutils.version>1.11.0</commons-beanutils.version>
        <commons-lang3.version>3.18.0</commons-lang3.version>
        <commons-text.version>1.13.0</commons-text.version>
        <groovy.version>4.0.26</groovy.version>
        <javax.activation.version>1.2.0</javax.activation.version>
        <jaxb-api.version>2.3.1</jaxb-api.version>
        <jakarta-xml-api.version>4.0.2</jakarta-xml-api.version>
        <joda.version>2.13.1</joda.version>
        <opencsv.version>5.10</opencsv.version>
        <spotbugs-annotations.version>4.9.2</spotbugs-annotations.version>
        <!-- Test dependencies -->
        <mockito-core.version>5.16.0</mockito-core.version>
        <hamcrest.version>2.2</hamcrest.version>
        <junit.version>4.13.2</junit.version>
        <junit-jupiter.version>5.12.0</junit-jupiter.version>
        <!-- plugin versions -->
        <maven-bundle-plugin.version>5.1.9</maven-bundle-plugin.version>
        <skip-publish>true</skip-publish>

        <maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
        <bundle.version>${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}.ci_${maven.build.timestamp}</bundle.version>
    </properties>

    <modules>
        <module>bom</module>
        <module>faktorips-runtime</module>
        <module>faktorips-runtime/client</module>
        <module>faktorips-runtime-groovy</module>
        <module>faktorips-runtime-javax-xml</module>
        <module>faktorips-runtime-jakarta-xml</module>
        <module>faktorips-testsupport</module>
        <module>faktorips-valuetypes</module>
        <module>faktorips-valuetypes-joda</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime-bom</artifactId>
                <version>${faktorips.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- Used to document null handling -->
            <dependency>
                <groupId>com.github.spotbugs</groupId>
                <artifactId>spotbugs-annotations</artifactId>
                <version>${spotbugs-annotations.version}</version>
                <type>jar</type>
                <scope>provided</scope>
            </dependency>
            <!-- For traditional JAXB-support with javax.xml packages in value-converters / runtime base classes -->
            <dependency>
                <groupId>javax.xml.bind</groupId>
                <artifactId>jaxb-api</artifactId>
                <version>${jaxb-api.version}</version>
                <type>jar</type>
            </dependency>
            <!-- For traditional JAXB-support in value-converters / runtime base classes -->
            <dependency>
                <groupId>com.sun.activation</groupId>
                <artifactId>javax.activation</artifactId>
                <version>${javax.activation.version}</version>
                <type>jar</type>
            </dependency>
            <!-- For modern JAXB-support with jakarta.xml packages in value-converters / runtime base classes -->
            <dependency>
                <groupId>jakarta.xml.bind</groupId>
                <artifactId>jakarta.xml.bind-api</artifactId>
                <version>${jakarta-xml-api.version}</version>
                <type>jar</type>
            </dependency>
            <!-- for IPS-Test-Suites with JUnit 4 -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
            <!-- for IPS-Test-Suites with JUnit 5 -->
            <dependency>
                <groupId>org.junit</groupId>
                <artifactId>junit-bom</artifactId>
                <version>${junit-jupiter.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- For table contents saved in CSV format -->
            <dependency>
                <groupId>com.opencsv</groupId>
                <artifactId>opencsv</artifactId>
                <version>${opencsv.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-text</artifactId>
                <version>${commons-text.version}</version>
            </dependency>
            <dependency>
                <groupId>commons-beanutils</groupId>
                <artifactId>commons-beanutils</artifactId>
                <version>${commons-beanutils.version}</version>
            </dependency>
            <!-- For formulas interpreted at runtime -->
            <dependency>
                <groupId>org.apache.groovy</groupId>
                <artifactId>groovy</artifactId>
                <version>${groovy.version}</version>
            </dependency>
            <!-- For Joda Time datatypes -->
            <dependency>
                <groupId>joda-time</groupId>
                <artifactId>joda-time</artifactId>
                <version>${joda.version}</version>
            </dependency>
            <!-- To find service implementations -->
            <dependency>
                <groupId>com.google.auto.service</groupId>
                <artifactId>auto-service-annotations</artifactId>
                <version>${auto-service.version}</version>
            </dependency>
            <!-- For matchers in Testsupport -->
            <dependency>
                <groupId>org.hamcrest</groupId>
                <artifactId>hamcrest</artifactId>
                <version>${hamcrest.version}</version>
            </dependency>
            <!-- Test dependencies -->
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${mockito-core.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.sun.xml.bind</groupId>
                <artifactId>jaxb-impl</artifactId>
                <version>${jakarta-xml-api.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>${maven-bundle-plugin.version}</version>
                    <extensions>true</extensions>
                    <executions>
                        <execution>
                            <id>generate-manifest</id>
                            <phase>process-classes</phase>
                            <goals>
                                <goal>manifest</goal>
                            </goals>
                            <configuration>
                                <supportIncrementalBuild>true</supportIncrementalBuild>
                            </configuration>
                        </execution>
                    </executions>
                    <configuration>
                        <instructions>
                            <Bundle-Vendor>Faktor Zehn GmbH</Bundle-Vendor>
                            <Export-Package>org.faktorips.*</Export-Package>
                            <Bundle-Version>${bundle.version}</Bundle-Version>
                        </instructions>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>release</id>
            <properties>
                <bundle.version>${project.version}</bundle.version>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.sonatype.central</groupId>
                        <artifactId>central-publishing-maven-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>