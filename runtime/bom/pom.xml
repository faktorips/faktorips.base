<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.faktorips</groupId>
    <artifactId>faktorips-runtime-bom</artifactId>
    <version>26.1.0.a20251024-01</version>
    <packaging>pom</packaging>

    <name>Faktor-IPS Runtime Bill of Materials</name>
    <description>Defines versions for all Faktor-IPS libraries useable as runtime dependencies and for the dependencies they use.</description>

    <properties>
        <faktorips.version>${project.version}</faktorips.version>
        <!-- Encoding settings -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <organization>
        <name>Faktor Zehn GmbH</name>
        <url>http://faktorzehn.org</url>
    </organization>

    <developers>
        <developer>
            <id>fips</id>
            <name>Faktor-IPS-Team</name>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <name>Faktor-IPS Releases</name>
            <url>https://nexus.faktorzehn.de/content/repositories/faktorips/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>Faktor-IPS Snapshots</name>
            <url>https://nexus.faktorzehn.de/content/repositories/faktorips-snapshots/</url>
        </snapshotRepository>
        <site>
            <id>doc</id>
            <name>Faktor-IPS Documentation</name>
            <url>https://doc.faktorzehn.org/faktorips/${project.version}/</url>
        </site>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-maven-archetype</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-maven-plugin</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime-client</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime-groovy</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime-jakarta-xml</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-runtime-javax-xml</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-testsupport</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-valuetypes</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-valuetypes-joda</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>