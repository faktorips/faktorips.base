<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.faktorips</groupId>
    <artifactId>faktorips-devtools-bom</artifactId>
    <version>26.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Faktor-IPS Devtools Bill of Materials</name>
    <description>Defines versions for all Faktor-IPS development tools and for the dependencies they use.</description>

    <properties>
        <faktorips.version>${project.version}</faktorips.version>
        <!-- Encoding settings -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <organization>
        <name>Faktor Zehn GmbH</name>
        <url>http://faktorzehn.org</url>
    </organization>

    <developers>
        <developer>
            <id>fips</id>
            <name>Faktor-IPS-Team</name>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <name>Faktor-IPS Releases</name>
            <url>https://nexus.faktorzehn.de/content/repositories/faktorips/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>Faktor-IPS Snapshots</name>
            <url>https://nexus.faktorzehn.de/content/repositories/faktorips-snapshots/</url>
        </snapshotRepository>
        <site>
            <id>doc</id>
            <name>Faktor-IPS Documentation</name>
            <url>https://doc.faktorzehn.org/faktorips/${project.version}/</url>
        </site>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction-plainjava</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction-testsetup</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-dtfl-common</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-fl</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-model-plainjava</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-util</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>org.faktorips.devtools.model</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>org.faktorips.devtools.model.builder</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>