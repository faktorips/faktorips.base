    <artifactId>faktorips-devtools-bom</artifactId>
    <packaging>pom</packaging>

    <name>Faktor-IPS Devtools Bill of Materials</name>
    <description>Defines versions for all Faktor-IPS development tools and for the dependencies they use.</description>

    <properties>
        <bsh.version>2.0b4</bsh.version>
        <apache-extras-bsh.version>2.0b6</apache-extras-bsh.version>
        <commons-io.version>2.17.0</commons-io.version>
        <osgi-framework.version>1.9.0</osgi-framework.version>
        <osgi-util-tracker.version>1.5.4</osgi-util-tracker.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction-plainjava</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-abstraction-testsetup</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-dtfl-common</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-fl</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-model-plainjava</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.faktorips</groupId>
                <artifactId>faktorips-util</artifactId>
                <version>${faktorips.version}</version>
            </dependency>
            <dependency>
                <groupId>org.beanshell</groupId>
                <artifactId>bsh</artifactId>
                <version>${bsh.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache-extras.beanshell</groupId>
