<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.faktorips.test</groupId>
    <artifactId>sample-maven-model</artifactId>
    <version>1.0.0</version>
    
    <properties>
        <stay>stay</stay>
        <faktorips.version>20.6.0</faktorips.version>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>stayGroup</groupId>
            <artifactId>stayArtifact</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-runtime</artifactId>
            <version>${faktorips.version}</version>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-runtime-groovy</artifactId>
            <version>${faktorips.version}</version>
        </dependency>
    </dependencies>
    
    <build>
        <resources>
            <resource>
                <targetPath>stay</targetPath>
                <directory>stay</directory>
            </resource>
            <resource>
                <directory>testFolder</directory>
            </resource>
            <resource>
                <directory>modell</directory>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>stayGroup</groupId>
                    <artifactId>stayArtifact</artifactId>
                    <version>1.0.0</version>
                 </plugin>
                 <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>3.2.0</version>
                 </plugin>
                 <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>3.1.2</version>
                 </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>stayGroup</groupId>
                <artifactId>stayArtifact</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                    <executions>
                      <execution>
                        <id>stay</id>
                        <goals>
                          <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                          <goal>aggregate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <archive>
                        <manifestFile>WrongPath</manifestFile>
                        <forced>true</forced>
                    </archive>
                    <outputDirectory>stay</outputDirectory>
                </configuration>
          </plugin>
        </plugins>
    </build>
</project>