<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.faktorips</groupId>
        <artifactId>faktorips-devtools-eclipse</artifactId>
        <version>26.1.0.release</version>
    </parent>

    <artifactId>faktorips-devtools-eclipse-plugins</artifactId>
    <packaging>pom</packaging>

    <modules>
        <!-- plugins of feature org.faktorips.feature -->
        <module>org.faktorips.devtools.abstraction.eclipse</module>
        <module>org.faktorips.devtools.ant</module>
        <module>org.faktorips.devtools.core</module>
        <module>org.faktorips.devtools.core.refactor</module>
        <module>org.faktorips.devtools.core.ui</module>
        <module>org.faktorips.devtools.htmlexport</module>
        <module>org.faktorips.devtools.htmlexport.nl1</module>
        <module>org.faktorips.devtools.htmlexport.ui</module>
        <module>org.faktorips.devtools.htmlexport.ui.nl1</module>
        <module>org.faktorips.devtools.model</module>
        <module>org.faktorips.devtools.model.builder</module>
        <module>org.faktorips.devtools.model.decorators</module>
        <module>org.faktorips.devtools.model.eclipse</module>
        <module>org.faktorips.devtools.stdbuilder</module>
        <module>org.faktorips.devtools.stdbuilder.ui</module>
        <module>org.faktorips.devtools.tableconversion</module>
        <module>org.faktorips.devtools.tableconversion.nl1</module>
        <module>org.faktorips.eclipse.emf.codegen</module>
        <module>org.faktorips.m2e</module>
        <module>org.faktorips.nls.devtools.core.nl1</module>
        <module>org.faktorips.nls.devtools.core.refactor.nl1</module>
        <module>org.faktorips.nls.devtools.core.ui.nl1</module>
        <module>org.faktorips.nls.devtools.model.nl1</module>
        <module>org.faktorips.nls.devtools.model.builder.nl1</module>
        <module>org.faktorips.nls.devtools.model.decorators.nl1</module>
        <module>org.faktorips.nls.devtools.stdbuilder.nl1</module>
        <module>org.faktorips.nls.devtools.stdbuilder.ui.nl1</module>
        <module>org.faktorips.testdatatype</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-valuetypes</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-valuetypes-joda</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-testsupport</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-util</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-dtfl-common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-fl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-abstraction</artifactId>
        </dependency>
        <!-- TODO: keine Dependency mehr zu plainjava -->
        <dependency>
            <groupId>org.faktorips</groupId>
            <artifactId>faktorips-abstraction-plainjava</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-source-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>plugin-source</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-compiler-plugin</artifactId>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.revapi</groupId>
                <artifactId>revapi-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
